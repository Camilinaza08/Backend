<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd" version="3.0">
<persistence-unit name="fintech" transaction-type="RESOURCE_LOCAL">
<!--  Clases de entidad  -->
<class>backend.entities.Empleado</class>
<class>backend.entities.Empresa</class>
<class>backend.entities.TarjetaCredito</class>

<properties>
<!--  ConexiÃ³n JDBC  -->
<property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
<property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:juegos;DB_CLOSE_DELAY=-1"/>
<property name="jakarta.persistence.jdbc.user" value="sa"/>
<property name="jakarta.persistence.jdbc.password" value=""/>
<!--  Mostrar SQL  -->
<property name="hibernate.show_sql" value="true"/>
<property name="hibernate.format_sql" value="true"/>
<!--  Generar esquema automÃ¡ticamente  -->
<property name="jakarta.persistence.schema-generation.database.action" value="create"/>
<!--  No usar script externo  -->
<property name="jakarta.persistence.schema-generation.create-source" value="metadata"/>
<!--  Desactivar hbm2ddl auto para evitar conflictos  -->
<property name="hibernate.hbm2ddl.auto" value="none"/>
</properties>
</persistence-unit>
</persistence>